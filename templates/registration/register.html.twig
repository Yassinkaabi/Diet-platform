{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="">
                    {# <h1>Register</h1> #}
                    <div class="registerForm">
                        <form method="post" style="border: 2px solid #222; padding: 40px; margin-top: 10%;">
                            {{ form_errors(registrationForm) }}
                            {{ form_start(registrationForm) }}

                            <div class="form-group">
                                <label for="{{ registrationForm.username.vars.id }}">Username:</label>
                                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="{{ registrationForm.email.vars.id }}">Email:</label>
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="{{ registrationForm.age.vars.id }}">Age:</label>
                                {{ form_widget(registrationForm.age, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="{{ registrationForm.height.vars.id }}">Height:</label>
                                {{ form_widget(registrationForm.height, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group">
                                <label for="{{ registrationForm.weight.vars.id }}">Weight:</label>
                                {{ form_widget(registrationForm.weight, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="form-group">
                                <label for="{{ registrationForm.genre.vars.id }}">Genre:</label>
                                {{ form_widget(registrationForm.genre) }}
                            </div>

                            <div class="form-group">
                                <label for="{{ registrationForm.plainPassword.vars.id }}">Password:</label>
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="form-group form-check">
                                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                <label class="form-check-label" style="margin-left:40px" for="{{ registrationForm.agreeTerms.vars.id }}"></label>
                            </div>

                            <button type="submit" class="btn btn-primary">Register</button>
                            <br/>
                            <p>Already have an account? <a href='{{ path("app_login") }}'>Sign in</a></p>
                            {{ form_end(registrationForm) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

