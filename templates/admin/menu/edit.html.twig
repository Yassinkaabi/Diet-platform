{% extends 'dashboard.html.twig' %}

{% block title %}Modifier un plat!
{% endblock %}

{% block content %}

	<div class="container mt-5">
		<h2>Mdofier un plat</h2>

		{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

		<div class="form-group mt-4">
			{{ form_label(form.nomPlat, 'Plat', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.nomPlat, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.imageFile, 'Image de la nourriture', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10" >
				{{ form_widget(form.imageFile, {'attr': {'class': 'img-fluid', 'style': 'max-width: 300px; max-height: 300px;'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.cout, 'Cout', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.cout, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.nbrCalories, 'Nombre de calories', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.nbrCalories, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.ingredients, 'ingredient', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.ingredients, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_label(form.regime, 'RÃ©gime', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
			<div class="col-sm-10">
				{{ form_widget(form.regime, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="form-group mt-4">
			<div class="col-sm-offset-2 col-sm-10">
				{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Modifier un plat'}) }}
			</div>
		</div>

		{{ form_end(form) }}
	</div>

{% endblock %}
