{% extends "dashboard.html.twig" %}

{% block content %}

<div class="container mt-5">
    <h2>Modifier le Régime</h2>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">
        {{ form_label(form.nomRegime, 'Nom de régime', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.nomRegime, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.duree, 'Durée de régime', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.type, 'Type de régime', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Modifier'}) }}
    </div>
</div>


    {{ form_end(form) }}

    <a href="{{ path('regime_list', {'id': regime.id}) }}" class="btn btn-secondary mt-2">Retour aux détails</a>
</div>

{% endblock %}
