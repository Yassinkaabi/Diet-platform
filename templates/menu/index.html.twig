{% extends 'base.html.twig' %}

{% block title %}Menu list
{% endblock %}

{% block body %}

	<div class="container-xxl py-5">
		<div class="container">
			<div class="row g-0 gx-5 align-items-end">
				<div class="col-lg-6">
					<div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
						<h1 class="display-5 mb-3">Our Menu</h1>
						<p>Indulge in a symphony of flavors that celebrate well-being on every plate. Our menu of healthy delights is crafted with fresh, wholesome ingredients to nourish your body and delight your senses. 
							Elevate your dining experience with mindful choices that prioritize both taste and vitality.</p>
					</div>
				</div>
				<div class="col-lg-6 text-start text-lg-end wow slideInRight" data-wow-delay="0.1s">
					<ul class="nav nav-pills d-inline-flex justify-content-end mb-5">
						<li class="nav-item me-2">
							<a class="btn btn-outline-primary border-2 active" data-bs-toggle="pill" href="#tab-1">Vegetable</a>
						</li>
						<li class="nav-item me-2">
							<a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-2">Fruits
							</a>
						</li>
						<li class="nav-item me-0">
							<a class="btn btn-outline-primary border-2" data-bs-toggle="pill" href="#tab-3">Fresh</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="tab-content">
				<div id="tab-1" class="tab-pane fade show p-0 active">
					<div class="row g-4">
						{% for menu in menus %}
							<div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
								<div class="product-item">
									<div class=" bg-light overflow-hidden" style="text-align:center">
										<img width="220" height="150" src="{{ vich_uploader_asset(menu, 'imageFile') }}" alt="">
										<div class="bg-secondary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">New</div>
									</div>
									<div class="text-center p-4">
										<p class="d-block h5 mb-2">{{ menu.nomPlat }}</p>
										<span class="text-body ">{{ menu.cout }}
											dinars</span>
									</div>
									<div class="d-flex border-top">
										<small class="w-50 text-center border-end py-2">
											<a class="text-body" href="{{ path('menu_show', {'id': menu.id}) }}">
												<i class="fa fa-eye text-primary me-2"></i>View detail</a>
										</small>
										<small class="w-50 text-center py-2">
											<a class="text-body" href="">
												<i class="fa fa-shopping-bag text-primary me-2"></i>Add to favoris</a>
										</small>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
			{% endblock %}
